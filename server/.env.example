# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# MongoDB Connection (from Render MongoDB addon or MongoDB Atlas)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/adventure_triangle?retryWrites=true&w=majority

# SendGrid Email (Optional - get free API key from sendgrid.com)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=noreply@adventuretriangle.com
FROM_NAME=Adventure Triangle

# Security
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL (will update after Vercel deployment)
FRONTEND_URL=https://your-vercel-app.vercel.app

# Logging
LOG_LEVEL=info